//Q4) 성적 3개를 입력받아 총점과 평균을 출력하라.

#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
int main()
{
	int score[3];
	int total;
	float avg;

	printf("성적 입력\n");
	scanf("%d", &score[0]);
	scanf("%d", &score[1]);
	scanf("%d", &score[2]);

	total = score[0] + score[1] + score[2];
	avg = (double)total / 3;

  printf("총점 : %d\n", total);
	printf("평균 : %.2f\n", avg);
	return 0;

}
